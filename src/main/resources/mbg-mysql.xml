<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--    <properties resource="mysql/init-nacos.properties"/>-->
    <context id="mysqlTables" targetRuntime="MyBatis3">
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="DBType" value="mysql"></property>

        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"></plugin>

        <!--序列化-->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"></plugin>
        <!--Example替换成Criteria-->
        <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
            <property name="searchString" value="Example$"/>
            <property name="replaceString" value="Criteria"/>
        </plugin>
        <!--虚拟组件，针对表没有设置主键的时候使用-->
        <plugin type="org.mybatis.generator.plugins.VirtualPrimaryKeyPlugin"/>

        <!--注释-->
        <commentGenerator>
            <!--<property name="javaFileEncoding" value="UTF-8"/>-->
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/mysharding?useUnicode=true&amp;characterEncoding=utf-8&amp;serverTimezone=GMT%2B8"
                        userId="root" password="root">
            <property name="useInformationSchema" value="true"/>
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.tuesdayma.middleware.sharding.dal.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="sqlMapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.tuesdayma.middleware.sharding.dal.mapper"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="my_order" domainObjectName="MyOrder">
            <property name="ignoreQualifiersAtRuntime" value="true"/>
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
        </table>
        <table tableName="my_order_detail" domainObjectName="MyOrderDetail">
            <property name="ignoreQualifiersAtRuntime" value="true"/>
            <generatedKey column="id" sqlStatement="JDBC" identity="true"/>
        </table>
    </context>

    <!--## mybatis 代码自动生成
    配置 mbg-mysql.xml 之后；执行 `mvn mybatis-generator:generate`-->
</generatorConfiguration>